<scroll-view scroll-y style="height: 100vh;">
  <!-- wxml -->
  <view class="status-bar" style="height: {{statusBarHeight}}px;"></view>
  <view class="nav-bar" style="height: {{navBarHeight}}px;">
  </view>
  <!-- 置顶小程序模块 -->
  <view class="banner">
    <ant-container title="自定义图标大小">
      <ant-grid items="{{bannerList}}" wx:key="id" data-index="{{index}}" data-item-id="{{item}}"  data-item="{{JSON.stringify(bannerList)}}" bindtap="handleTapItem" columns="{{4}}" iconSize="{{50}}"></ant-grid>
    </ant-container>
  </view>
  <!-- 列表 -->
  <view wx:for="{{appList}}" wx:key="id" class="item-container">
    
    <!-- 可滑动区域 -->
    <movable-area class="movable-area">
      <movable-view 
        class="movable-view"
        direction="horizontal"
        damping="30"
        out-of-bounds="false"
        x="{{item.swipeOffset}}" 
        data-index="{{index}}"
        bindchange="handleSwipe"
        bindtouchend="handleSwipeEnd"
      >
        <!-- 内容主体 -->
        <view class="content-wrapper">
          <image src="{{item.icon}}"  class="app-icon" mode="aspectFit" />
          <view class="text-container">
            <view class="title-row">
              <text class="app-name">{{item.name}}</text> 
              <image 
                src="http://jingjianqian.top/images/icon/car.svg"  
                class="verified-icon" 
                wx:if="{{index === 0}}"
              />
            </view>
            <text class="app-desc">{{item.desc}}</text> 
          </view>
        </view>
      </movable-view>
 
      <!-- 右侧操作按钮 -->
      <view class="action-buttons">
        <view 
          class="collect-btn {{item.isCollected  ? 'collected' : ''}}"
          bindtap="toggleCollect"
          data-id="{{item.id}}" 
        >
          <image 
            src="{{item.isCollected  ? 'http://jingjianqian.top/images/icon/coupons-off.svg'  : 'http://jingjianqian.top/images/icon/coupons-active.svg'}}"  
            class="star-icon"
          />
        </view>
      </view>
    </movable-area>
 
  </view>
</scroll-view>>
