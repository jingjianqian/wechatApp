/* 列表 */
/* index.wxss  */
.item-container {
  margin: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}
 
.movable-area {
  width: 100%;
  height: 180rpx;
}
 
.movable-view {
  width: 200%;
  height: 100%;
  z-index: 2;
  background: #fff;
}
 
.content-wrapper {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  width: 750rpx;
  height: 100%;
}
 
.app-icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}
 
.text-container {
  flex: 1;
  min-width: 0;
}
 
.title-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
 
.app-name {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
}
 
.verified-icon {
  width: 36rpx;
  height: 36rpx;
}
 
.app-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
 
.action-buttons {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 120rpx;
  background: linear-gradient(90deg, rgba(255,255,255,0) 0%, #fff 20%);
  z-index: 2;
}
 
.collect-btn {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}
 
.star-icon {
  width: 48rpx;
  height: 48rpx;
  transition: transform 0.2s;
}
 
.collect-btn:active .star-icon {
  transform: scale(1.2);
}